{
    "expire1pTrackingCookies": {
        "name": "Expire 1p tracking cookies",
        "desc": "Expiration date should be modified for 1p cookies set by trackers according to the policy from config",
        "tests": [
            {
                "name": "below treshold",
                "siteURL": "http://example.com/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=1000; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 1000,
                "exceptPlatforms": []
            },
            {
                "name": "above treshold",
                "siteURL": "http://example.com/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 86400,
                "exceptPlatforms": []
            },
            {
                "name": "same origin",
                "siteURL": "http://tracker.com/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=tracker.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 900000,
                "exceptPlatforms": []
            },
            {
                "name": "site safelisted locally",
                "siteURL": "http://local-exception.test/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=local-exception.test; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 900000,
                "exceptPlatforms": []
            },
            {
                "name": "site safelisted globally",
                "siteURL": "http://global-exception.test/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=global-exception.test; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 900000,
                "exceptPlatforms": []
            },
            {
                "name": "not a tracking script",
                "siteURL": "http://example.com/",
                "scriptURL": "http://not-a-tracker.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 900000,
                "exceptPlatforms": []
            },
            {
                "name": "above treshold - cnamed tracking script",
                "siteURL": "http://example.com/",
                "scriptURL": "http://tracker.cname.com/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 86400,
                "exceptPlatforms": []
            },
            {
                "name": "above treshold - unblockable tracking script (action=ignore)",
                "siteURL": "http://example.com/",
                "scriptURL": "http://unblockable-tracker.net/script.js",
                "cookieString": "foo=bar; Max-Age=900000; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 86400,
                "exceptPlatforms": []
            },
            {
                "name": "above treshold - expiration set to a specific date",
                "siteURL": "http://example.com/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; expires=Wed, 21 Aug 2030 20:00:00 UTC; Domain=example.com; Path=/; Secure",
                "expectCookieSet": true,
                "expectExpiryToBe": 86400,
                "exceptPlatforms": []
            },
            {
                "name": "below treshold - expiration set in the past",
                "siteURL": "http://example.com/",
                "scriptURL": "http://tracker.com/script.js",
                "cookieString": "foo=bar; expires=Thu, 01-Jan-1970 00:00:01 GMT; Domain=example.com; Path=/; Secure",
                "expectCookieSet": false,
                "exceptPlatforms": []
            }
        ]
    }
}