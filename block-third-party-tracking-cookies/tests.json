                "responseHeaders": [
                    {"name": "Set-Cookie", "value": "__Secure-ID=123; Secure; Domain=excluded-cookie-tracker.com"}
                ],
                "expectSetCookieHeadersRemoved": false,
                "exceptPlatforms": []
            },
            {
                "name": "set-cookie header received from a CNAMED tracker",
                "siteURL": "https://example.com/path",
